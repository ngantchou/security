# Environment Configuration Template
# Copy this file to .env for development or .env.production for production
# DO NOT commit .env files to version control!

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# Google Maps API Key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Mobile Money Integration (MTN MoMo)
MTN_MOMO_API_KEY=your_mtn_api_key
MTN_MOMO_USER_ID=your_mtn_user_id
MTN_MOMO_SUBSCRIPTION_KEY=your_mtn_subscription_key
MTN_MOMO_API_URL=https://sandbox.momodeveloper.mtn.com
# For production: https://api.mtn.com

# Mobile Money Integration (Orange Money)
ORANGE_MONEY_API_KEY=your_orange_api_key
ORANGE_MONEY_CLIENT_ID=your_orange_client_id
ORANGE_MONEY_CLIENT_SECRET=your_orange_client_secret
ORANGE_MONEY_API_URL=https://api.orange.com/orange-money-webpay/cm/v1
# For production: same URL with production credentials

# App Configuration
APP_NAME=Safety Alert
APP_VERSION=1.0.0
ENVIRONMENT=development
# Options: development, staging, production

# Debug Settings
ENABLE_LOGGING=true
ENABLE_CRASHLYTICS=false
# Set to true in production

# API Rate Limiting
MAX_ALERTS_PER_HOUR=10
MAX_PHOTO_UPLOADS_PER_DAY=50
MAX_COMMENTS_PER_HOUR=30

# Feature Flags
ENABLE_MOBILE_MONEY=false
# Enable when integration is ready

ENABLE_BLOOD_DONOR_REGISTRY=true
ENABLE_VOLUNTEER_NETWORK=true
ENABLE_NGO_INTEGRATION=false
# Enable when partnerships are established
